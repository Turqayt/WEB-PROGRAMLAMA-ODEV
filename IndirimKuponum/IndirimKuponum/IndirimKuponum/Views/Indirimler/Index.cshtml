@model IEnumerable<IndirimKuponum.Models.Indirimler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@inject LanguageServices language
<h1>@language.Getkey("IndirimListesi")</h1>

<hr />
<p>
    @Html.ActionLink(@language.Getkey("YeniIndirimEkle"), "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />


<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anasayfa)
        </th>
        <th style="width:170px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @if (item.Onay)
                {
                <label class="label label-success">@language.Getkey("Onayli")</label>
                }
                else
                {
                    <label class="label label-danger">@language.Getkey("OnayliDegil")</label>
                }
            </td>
            <td>
                @if (item.Anasayfa)
                {
                <label class="label label-success">@language.Getkey("Anasayfa")</label>
                }
                else
                {
                    <label class="label label-danger">@language.Getkey("AnasayfaDegil")</label>
                }
            </td>
            <td>
                @Html.ActionLink(@language.Getkey("Edit"), "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink(@language.Getkey("Delete"), "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>

