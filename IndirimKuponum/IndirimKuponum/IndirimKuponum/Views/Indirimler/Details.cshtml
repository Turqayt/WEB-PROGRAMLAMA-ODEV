@model IndirimKuponum.Models.Indirimler

@{
    ViewData["Title"] = "Details";

}

@inject LanguageServices language

<h1>@Model.Baslik</h1>
<hr />
<p>
    <span class="glyphicon glyphicon-time"></span>
    @Model.EklenmeTarihi
</p>
<hr />
<img class="img-responsive" src="https://image.shutterstock.com/image-vector/default-ui-image-placeholder-wireframes-260nw-1037719192.jpg" alt="" />
<hr />
<blockquote>
    <p>@Model.Aciklama</p>
</blockquote>
<p>
    @Model.Icerik
</p>

<div class="comment">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="YorumEkle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Yorum.KullaniciAdi" class="control-label">@language.Getkey("KullaniciAdi")</label>
                    <input asp-for="@Model.Yorum.KullaniciAdi" class="form-control" style="width:300px;height:50px;" />
                    <span asp-validation-for="@Model.Yorum.KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Yorum.YorumText" class="control-label">@language.Getkey("YorumText")</label>
                    <input asp-for="@Model.Yorum.YorumText" class="form-control" style="width:700px;height:150px;" />
                    <span asp-validation-for="@Model.Yorum.YorumText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin") || User.IsInRole("User"))
                        {
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        }
                    }
                    else
                    {
                <a href="/Identity/Account/Register/">@language.Getkey("YorumYazmakIcinUyeOl")</a>
                    }

                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="media">
        
        <div class="media-body">
            <h5 class="mt-0">@Html.ActionLink(@language.Getkey("YorumlariGormekIcinTikla"), "List", "Yorum")</h5>


        </div>
    </div>

</div>
<div>

    <a asp-controller="Home" asp-action="Index">@language.Getkey("ListeyeDon")</a>
</div>

@section SagKolon{
    @Html.Partial("Search")

<div class="well">
    <h4>@language.Getkey("IndirimKategorileri")</h4>
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/1">@language.Getkey("Giyim")</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/2">@language.Getkey("Seyahat")</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/3">@language.Getkey("Egelence")</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/4">@language.Getkey("Egitim")</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/5">@language.Getkey("Yemek")</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/Indirimler/List/6">@language.Getkey("Aksesuar")</a>
                </li>
            </ul>
        </div>
    </div>
</div>
}
