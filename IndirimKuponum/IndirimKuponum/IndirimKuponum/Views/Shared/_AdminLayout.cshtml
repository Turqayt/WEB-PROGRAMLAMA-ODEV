@{
    Layout = "";
}
@inject LanguageServices language

<!DOCTYPE html>
<html>
<title>Admin</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
        <h3 class="w3-bar-item">Menu</h3>
        <a href="/Home/Index/" class="w3-bar-item w3-button">@language.Getkey("Anasayfa")</a>
        <a href="/Kategori/Index/" class="w3-bar-item w3-button">@language.Getkey("Kategori")</a>
        <a href="/Indirimler/Index" class="w3-bar-item w3-button">@language.Getkey("Indirim")</a>
        <a href="/Yorum/Index" class="w3-bar-item w3-button">@language.Getkey("Yorum")</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:25%">
        
        <div class="w3-container" style="background-color:forestgreen; color:white;">
            <h1>@language.Getkey("AdminYonetimPaneli")</h1>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>

