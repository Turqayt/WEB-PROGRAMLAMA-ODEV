@model IEnumerable<IndirimKuponum.Models.IndirimlerModel>

@inject LanguageServices language

@if (Model.Count() == 0)
{
    <div class="alert alert-warning"><h3>@language.Getkey("KayitBulunamadi")</h3></div>
}
else
{

    foreach (var Indirim in Model)
    {
        <div class="indirim">
            <h3 class="page-header">
                @Indirim.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @Indirim.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="https://image.shutterstock.com/image-vector/default-ui-image-placeholder-wireframes-260nw-1037719192.jpg" alt="">
            <hr />
            <p>
                @Indirim.Aciklama
            </p>
            @Html.ActionLink(@language.Getkey("DahaFazla"), "Details", "Indirimler", new { id = Indirim.Id }, new { @class = "btn btn-primary" })

        </div>
    }
}