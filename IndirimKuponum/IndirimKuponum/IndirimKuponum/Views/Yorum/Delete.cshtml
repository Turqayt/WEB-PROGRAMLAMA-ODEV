@model IndirimKuponum.Models.Yorum

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sil</h1>

<h3>Bunu silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kategori</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KullaniciAdi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YorumText)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IndirimId)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YorumId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="YorumId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>